import React from "react";

// âœ… Componente MouseClicker
function MouseClicker() {
  const handleButtonClick = (event) => {
    console.log("Button name:", event.target.name);
  };

  const handleImageClick = (event) => {
    console.log("Image src:", event.target.src);

    // ðŸ‘‡ Impedisce la propagazione dell'evento al pulsante
    event.stopPropagation();
  };

  return (
    <div>
      <button name="one" onClick={handleButtonClick}>
        {/* Lâ€™immagine Ã¨ allâ€™interno del pulsante */}
        <img
          src="https://via.placeholder.com/50"
          alt="icon"
          onClick={handleImageClick}
        />
        Clicca me!
      </button>
    </div>
  );
}

// âœ… Componente MultiButton
function MultiButton() {
  const handleClick = (event) => {
    console.log("Hai cliccato il pulsante:", event.target.name);
  };

  return (
    <div>
      <button name="one" onClick={handleClick}>One</button>
      <button name="two" onClick={handleClick}>Two</button>
      <button name="three" onClick={handleClick}>Three</button>
    </div>
  );
}

// âœ… Esempio di utilizzo in App.js
function App() {
  return (
    <div>
      <h1>Esercizio sugli eventi React</h1>
      <MouseClicker />
      <hr />
      <MultiButton />
    </div>
  );
}

export default App;